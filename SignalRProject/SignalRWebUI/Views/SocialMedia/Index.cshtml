@using SignalRWebUI.Dtos.SocialMediaDtos
@model List<ResultSocialMediaDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Sosyal Medya İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Sosyal Medya Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Sosyal Medya  İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Https/Http Url</th>
                                    <th scope="col">İcon</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td>@item.Url</td>
                                        <td>@item.Icon</td>
                                        <td><a class="btn btn-outline-danger" href="/SocialMedia/DeleteSocialMedia/@item.SocialMediaID">Sil</a></td>
                                        <td><a class="btn btn-outline-success" href="/SocialMedia/UpdateSocialMedia/@item.SocialMediaID">Güncelle</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                        <a href="/SocialMedia/CreateSocialMedia" class="btn btn-outline-primary">Yeni Sosyal Medya Ekle</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

