@using SignalRWebUI.Dtos.DiscountDtos
@model List<ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">İndirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">İndirim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            İndirim İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3 text-center">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ürün</th>
                                    <th scope="col">İndirim Oranı</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Aktif</th>
                                    <th scope="col">Pasif</th>
                                    <th colspan="4" scope="col">Durum</th>


                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th>@count</th>
                                        <td>@item.Title</td>
                                        <td>%@item.Amount</td>
                                        <td>
                                            @if (item.Status)
                                            {
                                                <span class="badge badge-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">Pasif</span>
                                            }
                                        </td>
                                        <td><a class="btn btn-outline-danger" href="/Discount/DeleteDiscount/@item.DiscountID">Sil</a></td>
                                        <td><a class="btn btn-outline-success" href="/Discount/UpdateDiscount/@item.DiscountID">Güncelle</a></td>
                                        <td>
                                            <a class="btn btn-outline-dark @(item.Status ? "disabled" : "")"
                                               href="/Discount/ChangeStatusToTrue/@item.DiscountID">Aktif</a>
                                        </td>
                                        <td>
                                            <a class="btn btn-outline-warning @(!item.Status ? "disabled" : "")"
                                               href="/Discount/ChangeStatusToFalse/@item.DiscountID">Pasif</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                        <a href="/Discount/CreateDiscount" class="btn btn-outline-primary">Yeni İndirim Ekle</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
