@model List<ResultNotificationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Bildirim Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Bildirim İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz.

                        </div><br />
                        <a href="/Notifications/CreateNotification/" class="btn btn-outline-primary">Yeni Bildirim Girişi</a>
                        <br />
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Tarih</th>
                                    <th scope="col">Durum</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Okundu İşaretle</th>
                                    <th scope="col">Okunmadı İşaretle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.NotificationID</td>
                                        <td>@item.Description</td>
                                        <td>@item.Date</td>
                                        <td>@item.Status</td>
                                        <td><a class="btn btn-outline-danger" href="/Notifications/DeleteNotification/@item.NotificationID">Sil</a></td>
                                        <td><a class="btn btn-outline-success" href="/Notifications/UpdateNotification/@item.NotificationID">Güncelle</a></td>
                                        <td><a class="btn btn-outline-success" href="/Notifications/NotificationStatusChangeToTrue/@item.NotificationID">Okundu</a></td>
                                        <td><a class="btn btn-outline-success" href="/Notifications/NotificationStatusChangeToFalse/@item.NotificationID">Okunmadı</a></td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>




